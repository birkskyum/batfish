{
  "name": "@mapbox/batfish",
  "version": "2.3.0",
  "description": "The React-powered static-site generator you didn't know you wanted",
  "main": "dist/node/index.js",
  "bin": {
    "batfish": "bin/batfish.js"
  },
  "files": [
    "bin",
    "docs",
    "modules",
    "dist"
  ],
  "scripts": {
    "lint-js": "eslint .",
    "format": "prettier --write '**/*.js'",
    "test-jest": "jest",
    "lint-md": "remark-preset-davidtheclark docs/*.md ./*.md",
    "lint-flow": "flow check",
    "lint": "run-p --aggregate-output lint-js lint-flow",
    "pretest": "npm run lint",
    "test": "jest",
    "build-webpack-modules": "del modules && babel src/webpack/public --out-dir modules --quiet",
    "build-dist": "del dist && cd src && cpy '**/*.*' ../dist --parents && cd .. && flow-remove-types dist/ --out-dir dist/ --quiet && cpy src/node/index.js dist/node --rename index.js.flow",
    "build": "run-p build-webpack-modules build-dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/batfish.git"
  },
  "author": "Mapbox",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mapbox/batfish/issues"
  },
  "homepage": "https://github.com/mapbox/batfish#readme",
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ],
    "{docs/*.md,README.md,CHANGELOG.md}": [
      "remark-preset-davidtheclark --format"
    ],
    "{bin/batfish.js,bin/write-cli-doc.js}": [
      "bin/write-cli-doc.js",
      "git add docs/cli.md"
    ]
  },
  "prettier": "@mapbox/prettier-config-docs",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-flow-strip-types"
    ]
  },
  "jest": {
    "coverageReporters": [
      "text",
      "html"
    ],
    "roots": [
      "./test"
    ],
    "testEnvironment": "node",
    "clearMocks": true,
    "setupFiles": [
      "<rootDir>/test/test-util/jest-setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "dependencies": {
    "@babel/code-frame": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx-self": "^7.16.0",
    "@babel/plugin-transform-react-jsx-source": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@mapbox/babel-plugin-transform-jsxtreme-markdown": "^1.1.0",
    "@mapbox/jsxtreme-markdown-loader": "^1.1.0",
    "@mapbox/link-hijacker": "^1.1.0",
    "@mapbox/link-to-location": "^1.0.0",
    "@mapbox/postcss-html-filter": "^2.0.0",
    "@mapbox/query-selector-contains-node": "^1.0.0",
    "@mapbox/scroll-restorer": "^1.0.0",
    "address": "^1.1.2",
    "assets-webpack-plugin": "^5.1.2",
    "autoprefixer": "^9.8.8",
    "babel-loader": "^8.2.3",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "browser-sync": "^2.27.7",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "concat-with-sourcemaps": "^1.1.0",
    "connect": "^3.7.0",
    "connect-history-api-fallback": "^1.6.0",
    "core-js": "^3.19.1",
    "cpy": "^8.1.2",
    "del": "^5.1.0",
    "del-cli": "^3.0.1",
    "es6-promise": "^4.2.8",
    "fasterror": "^1.1.0",
    "file-loader": "^6.2.0",
    "get-port": "^5.1.1",
    "globby": "^11.0.4",
    "got": "^4.2.0",
    "gray-matter": "^4.0.3",
    "hasha": "^5.2.2",
    "html-webpack-plugin": "^4.5.2",
    "ignore-loader": "^0.1.2",
    "indefinite": "^2.4.1",
    "is-absolute-url": "^3.0.3",
    "is-glob": "^4.0.3",
    "loader-utils": "^2.0.2",
    "lodash": "^4.17.21",
    "meow": "^7.1.1",
    "micromatch": "^4.0.4",
    "mkdirp": "^1.0.4",
    "nocache": "^2.1.0",
    "p-try": "^2.2.0",
    "path-type": "^4.0.0",
    "pify": "^5.0.0",
    "postcss": "^7.0.39",
    "postcss-csso": "^4.0.0",
    "postcss-url": "^8.0.0",
    "pretty-error": "^2.1.2",
    "pretty-ms": "^7.0.1",
    "prop-types": "^15.7.2",
    "resolve-from": "^5.0.0",
    "serve-static": "^1.14.1",
    "sitemap-static": "^0.4.4",
    "slugg": "^1.2.1",
    "source-map-support": "^0.5.20",
    "tempy": "^0.5.0",
    "time-stamp": "^2.2.0",
    "uglify-js": "^3.14.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-format-messages": "^2.0.6",
    "webpack-merge": "^4.2.2",
    "worker-farm": "^1.7.0"
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/plugin-transform-flow-strip-types": "^7.16.0",
    "@mapbox/prettier-config-docs": "^1.0.0",
    "argv": "0.0.2",
    "babel-eslint": "^10.1.0",
    "cpy-cli": "^3.1.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.32.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^5.10.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.27.0",
    "flow-bin": "^0.125.1",
    "flow-remove-types": "^2.165.0",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "lint-staged": "^11.2.6",
    "lorem-ipsum": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "ramda": "^0.27.1",
    "react-test-renderer": "^16.14.0",
    "remark-preset-davidtheclark": "^0.12.0",
    "rimraf": "^3.0.2",
    "strip-ansi": "^6.0.1"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  }
}
